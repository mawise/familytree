
<h2><%= @person.name %></h2>
<%= link_to 'Edit', edit_person_path(@person) %><br/>
<%= @person.birth %><br/>
<%= @person.notes %>

<hr>
<h3>Parents</h3>
<% @person.parents.each do |parent| %>
  <%= link_to parent.name, parent %>
<% end %>

<h3>Children</h3>
<% @person.children.each do |child| %>
  <%= link_to child.name, child %>
<% end %>
